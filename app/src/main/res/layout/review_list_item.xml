<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/review_list"
    android:layout_width="292dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingTop="12dp"
        android:textSize="14sp"
        android:textStyle="italic"

        tools:text="Joshua Smith" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_author"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textColor="#616161"
        tools:text="This is where the review will go.
        Yes right here there will be a review.
        Not sure how long the reviews will be but
         it doesn't matter Ive setup the list item
         to wrap content for the height" />

    <TextView
        android:id="@+id/tv_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_content"
        android:paddingBottom="12dp"
        android:paddingTop="6dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="italic"
        tools:text="www.somewebadress.com/make_the_link_clickable_launch_website" />

</RelativeLayout>